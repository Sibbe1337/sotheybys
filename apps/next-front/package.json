{
  "name": "next-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "bash scripts/build-wrapper.sh",
    "build:original": "next build",
    "build:strict": "next build && node scripts/assert-locales.js",
    "build:verify": "npm run build",
    "start": "next start",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "codegen": "graphql-codegen --config ../../codegen.yml",
    "deploy:preview": "wrangler pages deploy .next --project-name=sothebys-finland --branch=preview",
    "deploy:production": "wrangler pages deploy .next --project-name=sothebys-finland --branch=main",
    "wrangler:login": "wrangler login",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:deploy": "npm run pages:build && wrangler pages deploy .vercel/output/static --project-name=sothebys-finland",
    "pages:dev": "npx wrangler pages dev .vercel/output/static --compatibility-date=2024-01-01",
    "build:static": "next build --config next.config.static.js",
    "deploy:static": "npm run build:static && wrangler pages deploy out --project-name=sothebys-finland-static --branch=preview",
    "pm2:setup": "chmod +x pm2-setup.sh && ./pm2-setup.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop sothebys-next-front",
    "pm2:restart": "pm2 restart sothebys-next-front",
    "pm2:logs": "pm2 logs sothebys-next-front",
    "pm2:status": "pm2 list",
    "data-quality": "node scripts/data-quality-report.js",
    "data-quality:blueprint": "node scripts/data-quality-report.js --mode=blueprint",
    "data-quality:full": "node scripts/data-quality-report.js --mode=full",
    "data-quality:auto-fix": "node scripts/blueprint-auto-fix.js",
    "data-quality:auto-apply": "node scripts/blueprint-auto-fix.js --apply",
    "data-quality:dry-run": "node scripts/blueprint-auto-fix.js --apply --dry-run"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@portabletext/react": "^3.2.4",
    "@sanity/client": "^6.29.1",
    "@sanity/image-url": "^1.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@vis.gl/react-google-maps": "^1.6.1",
    "clsx": "^2.1.1",
    "graphql": "^16.8.1",
    "isomorphic-dompurify": "^2.11.0",
    "lucide-react": "^0.544.0",
    "next": "14.0.4",
    "next-intl": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^4.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^1.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
